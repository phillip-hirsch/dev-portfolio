---
import { Image } from "astro:assets";
import Hero from "../components/Hero/Hero.astro";
import Skills from "../components/Skills/Skills.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import { pageTransition } from "../utils/animations";
import portrait from "../../public/assets/portrait.jpg";
import "./index.css";
---

<BaseLayout>
  <div class="stack gap-20 lg:gap-48" transition:animate={pageTransition}>
    <div class="wrapper stack gap-8 lg:gap-20">
      <header class="hero">
        <Hero
          title="Hello, my name is Phillip Hirsch"
          tagline="Software Engineer based in Charlotte, North Carolina"
          align="start"
        />

        <Image
          alt="Phillip Hirsch smiling in a plaid button-up shirt and a white t-shirt"
          width="480"
          height="620"
          loading="eager"
          fetchpriority="high"
          src={portrait}
        />
      </header>

      <Skills />
    </div>
  </div>
</BaseLayout>
