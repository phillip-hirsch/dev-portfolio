---
import Hero from "../components/Hero/Hero.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import { pageTransition } from "../utils/animations";
import "./about.css";
---

<BaseLayout title="About | Phillip Hirsch" description="About Phillip Hirsch">
  <div class="stack gap-20" transition:animate={pageTransition}>
    <main class="wrapper about">
      <Hero title="About Me" align="start" />

      <section>
        <h2 class="section-title">Summary</h2>
        <div class="content">
          <p class="summary-text">
            Full Stack Software Engineer with expertise in building scalable web
            and mobile applications and cloud-based architectures. Strong
            background in React, React Native, TypeScript, Node.js, and GraphQL,
            with hands-on experience delivering features across 5+ enterprise
            applications. Passionate about solving complex engineering
            challenges, improving accessibility, and writing clean, maintainable
            code.
          </p>
        </div>
      </section>
      <section>
        <h2 class="section-title">Education</h2>
        <div class="content">
          <div class="education-item">
            <div class="education-header">
              <h3>Master of Science in Computer Science</h3>
              <p class="date">December 2022</p>
            </div>
            <p class="institution">University of North Carolina at Charlotte</p>
            <p class="focus">Concentration: Software, Systems, and Networks</p>
          </div>

          <div class="education-item">
            <div class="education-header">
              <h3>Bachelor of Science in Computer Science</h3>
              <p class="date">May 2021</p>
            </div>
            <p class="institution">University of North Carolina at Charlotte</p>
            <p class="focus">Concentration: Software Engineering</p>
          </div>
        </div>
      </section>
      <section>
        <h2 class="section-title">Skills</h2>
        <div class="content">
          <div class="skills-grid">
            <div class="skill-category">
              <h3>Languages</h3>
              <p>JavaScript, TypeScript, Python, Java, SQL, NoSQL</p>
            </div>
            <div class="skill-category">
              <h3>Front-End</h3>
              <p>React, React Native, Remix, Astro, Next.js</p>
            </div>
            <div class="skill-category">
              <h3>Back-End & APIs</h3>
              <p>Node.js, Express.js, NestJS, GraphQL, Bun, RESTful APIs</p>
            </div>
            <div class="skill-category">
              <h3>Cloud & DevOps</h3>
              <p>AWS, Docker, GitHub Actions</p>
            </div>
            <div class="skill-category">
              <h3>Testing & Security</h3>
              <p>
                Jest, Cypress, Authentication security, OWASP principles, Secure
                API development
              </p>
            </div>
            <div class="skill-category">
              <h3>AI Tooling</h3>
              <p>GitHub Copilot, Claude Code, Claude, ChatGPT</p>
            </div>
          </div>
        </div>
      </section>
    </main>
  </div>
</BaseLayout>
