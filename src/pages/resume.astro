---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import Icon from "../components/Icon.astro";
---

<BaseLayout
  title="Resume | Phillip Hirsch"
  description="View and download Phillip Hirsch's resume"
>
  <div class="stack gap-20">
    <div class="wrapper">
      <Hero title="Resume" align="center" />

      <div class="pdf-container">
        <iframe
          src="/assets/Resume_Full_Stack_Software_Engineer.pdf"
          title="Phillip Hirsch Resume"
          class="pdf-viewer"></iframe>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .wrapper {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .resume-actions {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin: 2rem 0;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .btn-primary {
    background: var(--accent-regular);
    color: var(--gray-999);
    border: 2px solid var(--accent-regular);
  }

  .btn-primary:hover {
    background: var(--accent-dark);
    border-color: var(--accent-dark);
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: transparent;
    color: var(--accent-regular);
    border: 2px solid var(--accent-regular);
  }

  .btn-secondary:hover {
    background: var(--accent-regular);
    color: var(--gray-999);
    transform: translateY(-2px);
  }

  .pdf-container {
    margin: 3rem 0;
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    overflow: hidden;
    background: var(--gray-999);
  }

  .pdf-viewer {
    width: 100%;
    height: 800px;
    border: none;
  }

  .note {
    text-align: center;
    color: var(--gray-400);
    font-size: var(--text-sm);
    margin-top: 2rem;
    font-style: italic;
  }

  .note code {
    background: var(--gray-800);
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-family: monospace;
    color: var(--accent-regular);
  }

  @media (max-width: 768px) {
    .pdf-viewer {
      height: 600px;
    }
  }
</style>
