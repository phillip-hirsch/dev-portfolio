---
import Hero from "../components/Hero/Hero.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import { pageTransition } from "../utils/animations";
---

<BaseLayout
  title="Resume | Phillip Hirsch"
  description="View and download Phillip Hirsch's resume"
>
  <div class="flex flex-col gap-20" transition:animate={pageTransition}>
    <div class="max-w-225 mx-auto py-8 px-6">
      <Hero title="Resume" align="center" />

      <a
        href="/assets/Resume_Full_Stack_Software_Engineer.pdf"
        download
        class="inline-flex lg:hidden w-fit mx-auto mt-6 items-center gap-2 px-6 py-3 rounded-lg no-underline font-medium transition-all duration-200 ease-in-out bg-(image:--gradient-accent) border-2 border-transparent text-gray-999 hover:-translate-y-0.5"
      >
        Download Resume
      </a>

      <div
        class="hidden lg:block my-12 border border-gray-800 rounded-xl overflow-hidden bg-gray-999"
      >
        <iframe
          src="/assets/Resume_Full_Stack_Software_Engineer.pdf#zoom=FitW"
          title="Phillip Hirsch Resume"
          class="w-full h-200 border-0"
        ></iframe>
      </div>
    </div>
  </div>
</BaseLayout>
