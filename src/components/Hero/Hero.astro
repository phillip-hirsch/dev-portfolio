---
interface Props {
  title: string;
  tagline?: string;
  align?: "start" | "center";
  showDownloadLink?: boolean;
}

const { align = "center", tagline, title, showDownloadLink } = Astro.props;
const isStart = align === "start";
---

<div
  class={`flex flex-col gap-4 text-lg text-center lg:text-xl ${isStart ? "lg:text-start" : ""}`}
>
  <div class="flex flex-col gap-2">
    <h1
      class={`text-3xl lg:text-5xl text-gray-0 max-w-[37ch] mx-auto ${isStart ? "lg:mx-0" : ""}`}
    >
      {title}
    </h1>
    {
      tagline && (
        <p class={`max-w-[37ch] mx-auto ${isStart ? "lg:mx-0" : ""}`}>
          {tagline}
        </p>
      )
    }
    {
      showDownloadLink && (
        <a
          href="/assets/Phillip_Hirsch.pdf"
          download
          class={`max-w-[37ch] mx-auto ${isStart ? "lg:mx-0" : ""} no-underline text-accent-regular transition-colors duration-200 hover:text-accent-dark hover:underline`}
        >
          Click here to download my resume.
        </a>
      )
    }
  </div>
  <slot />
</div>
